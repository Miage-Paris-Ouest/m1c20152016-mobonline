<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffe4b2">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:background="#FEA347" />

    <TextView android:text="To Do List" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_accueil_image_button_todolist"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/imageView7"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ListView android:id="@+id/listView" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/imageView7"
        android:layout_below="@+id/imageView2"
        android:transitionGroup="false" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Add to list"
        android:id="@+id/button_add_to_list"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="#08AE9E"
        android:textColor="#ffffff" />

</RelativeLayout>
