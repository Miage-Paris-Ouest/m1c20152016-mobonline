<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp" tools:context=".MainActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_how_to_pages"
        android:background="#FEA347" />

    <TextView
        android:text="How To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_how_to_pages"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_how_to_pages_title"
        android:background="#08AE9E"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@id/imageView_how_to_pages" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_how_to_pages_title"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView_how_to_pages_title"
        android:layout_alignBottom="@+id/imageView_how_to_pages_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_how_to_pages_description"
        android:background="#9f9f9f"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/imageView_how_to_pages"
        android:layout_alignRight="@+id/textView_how_to_pages"
        android:layout_alignEnd="@+id/textView_how_to_pages" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_how_to_pages_description"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/textView_how_to_pages"
        android:layout_alignEnd="@+id/textView_how_to_pages"
        android:layout_alignTop="@+id/imageView_how_to_pages_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/imageView_how_to_pages_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_how_to_pages_contentDescription"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView_how_to_pages_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

</RelativeLayout>