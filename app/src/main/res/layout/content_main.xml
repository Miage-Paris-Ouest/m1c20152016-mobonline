<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:text="News"
            android:textSize="32dip"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:id="@+id/activity_accueil_text_view_news"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_above="@+id/activity_accueil_image_button_todolist" />

        <ImageButton
            android:id="@+id/activity_accueil_image_button_howto"
            android:src="@drawable/howto"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginTop="131dp"
            android:background="#FEA347"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/activity_accueil_image_button_todolist"
            android:src="@drawable/todolist"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/activity_accueil_image_button_howto"
            android:background="#FEA347"
            android:layout_toRightOf="@+id/activity_accueil_text_view_howto"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:id="@+id/activity_accueil_image_button_culture"
            android:src="@drawable/culture"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="#FEA347"
            android:layout_alignBottom="@+id/activity_accueil_text_view_map"
            android:layout_toLeftOf="@+id/activity_accueil_image_button_todolist"
            android:layout_toStartOf="@+id/activity_accueil_image_button_todolist" />

        <ImageButton
            android:id="@+id/activity_accueil_image_button_map"
            android:src="@drawable/map"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_below="@+id/activity_accueil_image_button_todolist"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:background="#FEA347"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/activity_accueil_image_button_culture"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/activity_accueil_image_button_contact"
            android:src="@drawable/contact"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="#FEA347"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/activity_accueil_image_button_map"
            android:layout_toStartOf="@+id/activity_accueil_image_button_map"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/activity_accueil_image_button_culture" />

        <ImageButton
            android:id="@+id/activity_accueil_image_button_learning_locale"
            android:src="@drawable/learnfrench"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_below="@+id/activity_accueil_image_button_map"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#FEA347"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/activity_accueil_image_button_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="How To ?"
            android:id="@+id/activity_accueil_text_view_howto"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/activity_accueil_image_button_howto"
            android:layout_alignRight="@+id/activity_accueil_image_button_howto"
            android:layout_alignEnd="@+id/activity_accueil_image_button_howto"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="To Do List "
            android:id="@+id/activity_accueil_text_view_todolist"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/activity_accueil_image_button_todolist"
            android:layout_alignRight="@+id/activity_accueil_image_button_todolist"
            android:layout_marginRight="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Map"
            android:id="@+id/activity_accueil_text_view_map"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/activity_accueil_image_button_learning_locale"
            android:layout_alignLeft="@+id/activity_accueil_image_button_map"
            android:layout_alignStart="@+id/activity_accueil_image_button_map"
            android:layout_marginLeft="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact"
            android:id="@+id/activity_accueil_text_view_contact"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/activity_accueil_image_button_contact"
            android:layout_toLeftOf="@+id/activity_accueil_image_button_learning_locale"
            android:layout_toStartOf="@+id/activity_accueil_image_button_learning_locale"
            android:layout_marginRight="60dp"
            android:layout_alignTop="@+id/activity_accueil_image_button_contact"
            android:layout_marginTop="80dp" />

    </RelativeLayout>
</RelativeLayout>
